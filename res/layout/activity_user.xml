<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="0"
        android:background="#FFaa0000" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="我的账号"
            android:textColor="#ffffffff"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageView_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/back" />
    </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1" >
    

    <RelativeLayout
        android:id="@+id/center_top"
        android:layout_width="fill_parent"
        android:layout_height="130dp"
        android:background="@drawable/user_backpicture" >

        <FrameLayout
            android:id="@+id/icon_layout"
            android:layout_width="88.0dip"
            android:layout_height="88.0dip"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="20.0dip"
            android:layout_marginLeft="20.0dip"
            android:layout_marginRight="10.0dip" >

            <ImageView
                android:id="@+id/icon"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:src="@drawable/photo" />
        </FrameLayout>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/icon_layout"
            android:layout_marginLeft="28dp"
            android:layout_toRightOf="@+id/icon_layout"
            android:shadowColor="#a0a0a0a0"
            android:shadowDy="2.0"
            android:layout_marginTop="10dp"
            android:shadowRadius="1.0"
            android:text="登录名"
            android:textColor="#ffffffff"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/integral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_below="@+id/name"
            android:layout_alignLeft="@+id/name"
            android:text="积分:"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:clickable="true"
            android:focusable="true" />

    </RelativeLayout>
<LinearLayout
        style="@style/global_columns_style" 
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_marginTop="40.0dip"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/account_phone_layout"
            style="@style/global_column_style" >

            <TextView
                android:id="@+id/account_phone_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="跟帖数统计："/>

            <TextView
                android:id="@+id/comment_count"
                style="@style/global_catalog_style"
                android:layout_width="0.0dip"
                android:layout_marginLeft="10.0dip"
                android:layout_weight="1.0"
                android:text="" />

        </LinearLayout>

        <View
            android:id="@+id/acount_phone_line"
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:background="@color/linearlayout_border" />

        <LinearLayout
            android:gravity="center_vertical" 
            android:orientation="vertical"
            
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="13.0dip">

            <TextView
                android:id="@+id/login_log"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登陆日志" />
          
            <!-- <TextView
                android:id="@+id/account_sina_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14.0sp"
                android:textColor="#ff959595"
                android:layout_marginTop="5dip"
                android:text="诺亚没方舟" /> -->
                <ListView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/list"
                    />

        </LinearLayout>

        
    </LinearLayout>
    
        </LinearLayout>


    <Button
        android:id="@+id/btn_exit"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_weight="0"
        android:text="退出登录" 
        android:textSize="20dp"
        android:textColor="#ffffffff"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_red_selector"/>

</LinearLayout>