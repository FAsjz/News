<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="20dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp" >

        <EditText
            android:id="@+id/editText_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textEmailAddress" 
            android:hint="请输入用户昵称">

           
        </EditText>

        <EditText
            android:layout_marginTop="15dp"
            android:id="@+id/editText_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editText_nickname"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="密码：6到16位个字符" />
        <TextView
                android:id="@+id/textview_forgetPass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/editText_pwd"
                android:layout_alignParentRight="true"
                android:text="忘记密码"
                android:textSize="18sp" 
                android:clickable="true"
                android:textColor="@color/gray"
                
                />
			
        </RelativeLayout>
        

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:orientation="horizontal"
            android:padding="20dp">

            <Button
                android:id="@+id/button_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="注册"
                android:textSize="18sp" 
                android:textColor="@color/white"
                android:layout_weight="1"
                android:background="@drawable/drawable_normalbutton_selector"/>
			<Button
                android:id="@+id/button_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="登录"
                android:textSize="18sp" 
                android:textColor="@color/white"
                android:layout_weight="1"
                android:background="@drawable/drawable_normalbutton_selector"/>
        </LinearLayout>
    

</LinearLayout>